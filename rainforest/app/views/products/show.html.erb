<h1><%= "#{@product.name.capitalize}" %></h1>

<p><%= link_to "Back to index", "/products" %></p>

<%=@product.name%> : <%=@product.price %>Â¢

<p><%= link_to "Edit", "/products/#{@product.id}/edit" %> |
<%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you definitely sure you want to delete this product? It's pretty awesome, and can never come back."} %></p>

<p>
  Reviews:<br>
  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <div class="review_text">
          <%= review.review_text %>
        </div>
        <div class="review_time">
          <%= review.created_at %>
        </div>
      </li>
    <% end %>
  </ul>
</p>

<%= form_for([@product, @review]) do |form_helper| %>
  <p>
    <%= form_helper.label :review_text %>
    <%= form_helper.text_field :review_text %>
  </p>

  <p>
    <%= form_helper.submit 'submit' %>
  </p>

<% end %>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

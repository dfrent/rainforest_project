<h1>Edit Reviews</h1>

<%= link_to "Back to index", "/products" %>

<h2><%= "#{@product.name.capitalize}" %></h2>

<%= form_for ([@product, @review]) do |form_helper| %>

  <p>
    <%= form_helper.label :review_text %>:
    <%= form_helper.text_field :review_text %>
  </p>

  <p>
    <%= link_to "Delete this review", product_review_path(@review), method: :delete, data: {confirm: "Are you definitely sure you want to delete this review? It's pretty awesome, and can never come back."} %>
  </p>

  <p>
    <%= form_helper.submit "Submit" %>
  </p>

<% end %>

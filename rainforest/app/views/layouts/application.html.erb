<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest Shopping Center</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav>
        <ul>
          <li class='navbar'><%= link_to "Home", root_path, class: "navbar_text" %></li>
          <li class='navbar'><%=link_to "Add New Product", "/products/new", class: "navbar_text" %></li>
        </ul>
      </nav>

      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>

      <% if flash[:alert] %>
        <p class="alert"><%= flash[:alert] %></p>
      <% end %>

    <%= yield %>

    <footer>
      <ul>
        <li class='navbar'><%= link_to "Home", root_path, class: "footer_text" %></li>
        <li class='navbar'><%=link_to "Add New Product", "/products/new", class: "footer_text" %></li>
      </ul>
    </footer>

  </body>
</html>
